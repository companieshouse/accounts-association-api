local_resource(
  name = 'dev:accounts-association-api',
  cmd = 'mvn clean compile',
  deps = ['src']
)
custom_build(
  ref = '416670754337.dkr.ecr.eu-west-2.amazonaws.com/accounts-association-api:latest',
  command = 'mvn clean compile jib:dockerBuild -Dimage=$EXPECTED_REF',
  live_update = [
    sync(
      local_path = './target/classes',
      remote_path = '/app/classes'
    ),
    restart_container()
  ],
  deps = ['./target/classes']
)